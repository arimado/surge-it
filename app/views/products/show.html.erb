<h1>Products#show</h1>
<p>Find me in app/views/products/new.html.erb</p>

<ul>
  <li><strong>Current price:</strong> <%= @product.price %></li>
  <li><strong>Base price:</strong> <%= @product.price_base %></li>
  <li><strong>Max price:</strong> <%= @product.price_max %></li>
  <li><strong>Description:</strong> <%= @product.description %></li>
  <li><strong>Image:</strong> <%= @product.image %></li>
  <li><strong>Period:</strong> <%= @product.created_at %></li>
  <li><strong>Period:</strong> <%= @product.updated_at %></li>
  <li><strong>user_id this product belongs to:</strong> <%= @product.user_id %></li>
</ul>
<hr>
Order form


<%= form_for @order do |f| %>
    <p>
        <%= f.label :product_id %>
        <%= f.number_field :product_id, :required => true  %>
    </p>
    <p>
        <%= f.label :price %>
        <%= f.number_field :price, :required => true %>
    </p>
    <p>
        <%= f.label :price_base %>
        <%= f.number_field :price_base, :required => true %>
    </p>
    <p>
        <%= f.label :price_surge %>
        <%= f.number_field :price_surge, :required => true %>
    </p>
    <p>
        <%= f.label :revenue %>
        <%= f.number_field :revenue, :required => true %>
    </p>
    <p>
        <%= f.label :revenue_base %>
        <%= f.number_field :revenue_base, :required => true %>
    </p>
    <p>
        <%= f.label :revenue_surge %>
        <%= f.number_field :revenue_surge, :required => true %>
    </p>
    <%= f.submit %>
<% end %>

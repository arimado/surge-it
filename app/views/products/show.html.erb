<input id="currentProduct" type="hidden" value="<%= @product.id %>" />



<div class="viewContainer">
    <div class="header">
        <div class="headerTitle">
            <%= @product.name %>
        </div>
    </div>
    <div class="featureProductContainer">
        <div class="imageContainer">
            <div class="imageContainerInner">
                <img src="<%= @product.image %>" alt="">
            </div>
        </div>
        <div class="formContainer">
            <div id="trendState"> </div>
            <%= form_tag(controller: "orders", action: "create", method: "post", class: "buy") do %>
              <%= hidden_field_tag(:product_id, @product.id) %>
              <%= label_tag( @product.price ) %>
              <%= submit_tag("ADD ORDER") %>
            <% end %>
        </div>
    </div>
    <div class="productContentContainer">
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quas explicabo possimus dolor error tenetur, labore consequatur saepe vel voluptatibus laudantium atque, nulla vitae quod quos, nam veritatis pariatur, quidem recusandae?</p>
    </div>
    <div class="relatedProductsContainer">
        <ul>
            <li>related thing</li>
            <li>related thing</li>
            <li>related thing</li>
        </ul>
    </div>
</div>








<%= form_for @product do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name, :required => true %>
    </p>
    <p>
        <%= f.label :price %>
        <%= f.number_field :price, :required => true %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_field :description, :required => true %>
    </p>
    <p>
        <%= f.label :image %>
        <%= f.text_field :image, :required => true %>
    </p>
    <%= f.submit %>
<% end %>


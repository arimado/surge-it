
<div class="cardHeader">
    <h4>Creat product</h4>
</div>

<%= form_for @product do |f| %>
    <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name, :required => true %>
    </div>
    <div class="input-field">
        <%= f.label :price %>
        <%= f.number_field :price, :required => true %>
    </div>
    <div class="input-field">
        <%= f.label :price_max %>
        <%= f.number_field :price_max, :required => true %>
    </div>
    <div class="range-field">
        <%= f.label :surge_multiplier %>
        <%= f.range_field :surge_multiplier, :required => true , max: 3, step: 0.01%>
    </div>
    <div class="input-field">

        <%= f.text_area :description, :required => true, class: "materialize-textarea" %>
        <%= f.label :description %>
    </div>
    <div class="input-field">
        <%= f.label :image %>
        <%= f.text_field :image, :required => true %>
    </div>
    <%= f.submit "Create Product", class: "btn waves-effect waves-light"%>
<% end %>


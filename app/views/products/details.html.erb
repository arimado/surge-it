<div class="productDetailsContainer">
    <div class="header">
        <div class="headerTitle">
            <%= @product.name %>
        </div>
    </div>
    <div class="topDashContainer">
        <div class="left surgePriceContainer">
            <div class="bigNum"><%= @product.price - @product.price_base %></div>
            <div class="bigNumLabel">Surge Boost</div>
            <div class="smallNum"><span class="smallNumLabel">Real Price</span> <%= @product.price_base %> </div>
            <div class="smallNum"><span class="smallNumLabel">Total Price</span> <%= @product.price_base %> </div>
        </div>
        <div class="center todayPriceContainer">
            <div class="bigNum"> $7200.00 </div>
            <div class="bigNumLabel">Today</div>
            <div class="smallNum"><span class="smallNumLabel">Total orders</span> 11 </div>
        </div>
        <div class="right yesterdayPriceContainer">
            <div class="bigNum"> $7200.00 </div>
            <div class="bigNumLabel">Yesterday</div>
            <div class="smallNum"><span class="smallNumLabel">Total orders</span> 11 </div>
        </div>
    </div>
    <div class="chartsContainer">
    <div class="chartsTabs">
        <button id="fetch">GET THAT SWEET JSON</button>
    </div>
        <div class="chart">
            <canvas id="productChart" width="400" height="200"></canvas>
        </div>
    </div>
</div>







<input id="currentProduct" type="hidden" value="<%= params[:id] %>" />



<%= javascript_include_tag "product-details" %>
